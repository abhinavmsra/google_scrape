<div id="wrapper" class="">
  <%= render 'layouts/sidebar' %>

  <!-- Page Content -->
  <div id="page-content-wrapper">
    <div class="col-md-12 lp-header">
      <div class="col-md-9"></div>
      <div id="col-md-3">
        <ul class="nav navbar-nav pull-right">
          <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
        </ul>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="page-header">
              <h1>Custom Query</h1>
            </div>
            <div class="alert"></div>
            <div class="col-md-12">
              <%= form_tag links_path, id: 'query-form', method: :get, role: 'form' do %>
                <div class="form-group">
                  <label for="url">URL Matches:</label>
                  <%= text_field_tag :url, '', class: 'form-control' %>
                </div>
                <div class="form-group">
                  <label for="contains">URL Contains:</label>
                  <%= text_field_tag :contains, '', class: 'form-control' %>
                </div>
                <div class="form-group">
                  <label for="path_depth">URL Path Depth:</label>
                  <%= number_field_tag :path_depth, '', class: 'form-control' %>
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
              <% end %>
            </div>
          </div>
          <pre class="well hide" id="query-result"></pre>
        </div>
      </div>
    </div>
  </div>
  <!-- /#page-content-wrapper -->

</div>
