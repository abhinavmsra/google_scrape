<div id="wrapper" class="">
  <%= render 'layouts/sidebar' %>

  <!-- Page Content -->
  <div id="page-content-wrapper">
    <div class="col-md-12 lp-header">
      <div class="col-md-9"></div>
      <div id="col-md-3">
        <ul class="nav navbar-nav pull-right">
          <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
        </ul>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <div class="table-responsive">
            <table class="table">
              <thead>
              <tr>
                <th>Keyword</th>
                <th>AdWords at Top</th>
                <th>AdWords at Bottom</th>
                <th>Non AdWords Count</th>
                <th>Total Links</th>
                <th>Total Search Results</th>
              </tr>
              </thead>
              <tbody>
                <% @keywords.each do |keyword| %>
                  <tr>
                    <td><%= link_to keyword.key_word, keyword_path(keyword.id) %></td>
                    <td><%= keyword.ad_words_count_at_top_position %></td>
                    <td><%= keyword.ad_words_count_at_bottom_position %></td>
                    <td><%= keyword.non_ad_words_count %></td>
                    <td><%= keyword.links_count %></td>
                    <td><%= keyword.search_count %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <%= will_paginate @keywords %>
        </div>
      </div>
    </div>
  </div>
  <!-- /#page-content-wrapper -->

</div>
